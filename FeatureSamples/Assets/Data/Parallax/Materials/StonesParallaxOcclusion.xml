<material>
    <!-- The water example will assign the reflection texture to the diffuse unit -->
    <!-- The engine will automatically assign the refraction (viewport) texture to the environment unit during refract pass -->
    <technique name="Techniques/DiffParallaxOcclusion.xml" />
    <texture unit="diffuse" name="Textures/stones.png" />
    <texture unit="normal" name="Textures/stones_normal.png" />
    <texture unit="specular" name="Textures/stones_displace.png" />
    <parameter name="HeightScale" value="0.1" />
	<cull value="none" />
</material>